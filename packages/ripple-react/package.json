{
  "name": "@ripple/react",
  "version": "0.1.0",
  "description": "React bindings for Ripple state management",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@ripple/core": "file:../ripple"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "state-management",
    "react",
    "re-frame",
    "ripple"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/ripple.git",
    "directory": "packages/ripple-react"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/ripple/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/ripple#readme",
  "publishConfig": {
    "access": "public"
  }
}

