{
  "name": "@rplx/angular",
  "version": "0.2.0",
  "description": "Angular bindings for Ripple state management",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@angular/core": ">=16.0.0"
  },
  "dependencies": {
    "@rplx/core": "^0.2.0"
  },
  "devDependencies": {
    "@angular/core": "^17.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "state-management",
    "angular",
    "signals",
    "re-frame",
    "ripple"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anonymeye/ripplex.git",
    "directory": "packages/ripple-angular"
  },
  "bugs": {
    "url": "https://github.com/anonymeye/ripplex/issues"
  },
  "homepage": "https://github.com/anonymeye/ripplex#readme",
  "publishConfig": {
    "access": "public"
  }
}
